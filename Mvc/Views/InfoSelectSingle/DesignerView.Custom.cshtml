@using Telerik.Sitefinity.Mvc;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

<form>
    <div class="form-group">
        <label for="heading-text">
            Heading
        </label>
        <input id="heading-text" type="text" class="form-control" ng-model="properties.Heading.PropertyValue" />
    </div>

    <div class="form-group">
        <label for="description-text">Description</label>
        <textarea id="description-text" class="form-control" rows="3" ng-model="properties.Description.PropertyValue"></textarea>
    </div>

    <div class="form-group">
        <label for="placeholder-one-text">
            Select Placeholder
        </label>
        <input id="placeholder-one-text" type="text" class="form-control" ng-model="properties.SelectOnePlaceholder.PropertyValue" />
    </div>

    <hr class="side-to-side">

    @*<h5>Library Selector</h5>*@

    <div>
        <label for="library-field" class="m-top-sm">Library</label>
        <sf-list-selector sf-library-selector sf-multiselect="false" sf-sortable="true"
                          sf-provider="properties.ProviderName.PropertyValue"
                          sf-selected-item-id="librariesSelector.selectedItemId"
                          id="library-field"
                          sf-selected-item="librariesSelector.selectedItem"
                          sf-media-type="documents"></sf-list-selector>
    </div>

    <hr class="side-to-side">

    <expander expander-title="More Options">
        <div class="form-group">
            <div class="m-top-none">
                <label>
                    <input type="checkbox" ng-model="properties.HasBackButton.PropertyValue"
                           ng-true-value="'True'" ng-false-value="'False'" ng-checked="properties.HasBackButton.PropertyValue === 'True'" />
                    Show Back Button
                </label>
            </div>
            <div ng-show="properties.HasBackButton.PropertyValue === 'True'" class="label-content">
                <label for="page-field">Select a Page</label>
                <sf-list-selector sf-page-selector sf-multiselect="false" sf-sortable="true"
                                  sf-provider="properties.ProviderName.PropertyValue"
                                  id="page-field"
                                  sf-selected-item-id="properties.LinkedPageId.PropertyValue"
                                  sf-selected-item="properties.LinkedPage.PropertyValue"></sf-list-selector>
            </div>
        </div>
    </expander>
</form>